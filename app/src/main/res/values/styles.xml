<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_400</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Default components'(views') style -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="dialogTransparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="DefaultAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TorchLightButtonGray" parent="@android:style/Widget.Material.Button">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">#343434</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TorchLightButtonPrimary" parent="@android:style/Widget.Material.Button">
        <item name="android:textColor">@color/text_button</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TorchLightButtonSecondary" parent="@android:style/Widget.Material.Button">
        <item name="android:textColor">@color/main_400</item>
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TorchLightTextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TorchLightEditText" parent="@android:style/Widget.Material.EditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="TitleSingleLine">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TitleMultiLine">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RegularSingleLine">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RegularMultiLine">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SmallSingleLine">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SmallMultiLine">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionSingleLine">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionMultiLine">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MicroSingleLine">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="projectVM"
            type="com.mashup.torchlight.viewmodel.ProjectViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/create_project_start_margin"
        android:layout_marginEnd="@dimen/create_project_start_margin"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lytName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_name"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etProjectName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                android:text="@={projectVM.data.title}" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lytSampleContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_sample_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSampleContents"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                android:text="@={projectVM.data.title}" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lytContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_detail_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etContents"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                android:text="@={projectVM.data.title}" />
        </LinearLayout>
    </LinearLayout>
</layout>

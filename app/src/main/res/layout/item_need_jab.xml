<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:padding="16dp"
    android:background="@drawable/item_card_background"
    android:backgroundTint="#202020">

    <ImageView
        android:id="@+id/ivNeedJab"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/main_400" />

    <TextView
        android:id="@+id/tvNeedJab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivNeedJab"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        tools:text="기획자" />

    <TextView
        android:id="@+id/tvNeedJabNum"
        style="@style/SmallMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        tools:text="1/2명"

        />
</RelativeLayout>